# ============================================================================
# Honeypot Scam Detection System - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# ----------------------------------------------------------------------------
# REQUIRED: Google Gemini API Key
# ----------------------------------------------------------------------------
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# ----------------------------------------------------------------------------
# REQUIRED: API Authentication
# ----------------------------------------------------------------------------
# Secret key for API authentication (generate a random string)
# This key must match what GUVI platform sends in x-api-key header
API_SECRET_KEY=your_secret_api_key_for_authentication

# ----------------------------------------------------------------------------
# Session Configuration
# ----------------------------------------------------------------------------
# Maximum messages before session auto-ends
MAX_MESSAGES_PER_SESSION=20

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=30

# Inactivity timeout in minutes
SESSION_INACTIVITY_TIMEOUT_MINUTES=5

# ----------------------------------------------------------------------------
# GUVI Callback Configuration
# ----------------------------------------------------------------------------
# URL to send final results to
GUVI_CALLBACK_URL=https://hackathon.guvi.in/api/updateHoneyPotFinalResult

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
# Port to run the server on
PORT=8000

# Host to bind to (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# AI Agent Configuration (Optional)
# ----------------------------------------------------------------------------
# Gemini model to use
GEMINI_MODEL=gemini-pro

# Maximum tokens in AI response
MAX_RESPONSE_TOKENS=150

# AI temperature (0.0 - 1.0, higher = more creative)
AI_TEMPERATURE=0.7

# ----------------------------------------------------------------------------
# Scam Detection Configuration (Optional)
# ----------------------------------------------------------------------------
# Keyword score threshold for scam detection
SCAM_KEYWORD_THRESHOLD=15

# Minimum confidence for scam detection
MIN_CONFIDENCE_THRESHOLD=0.5

# Minimum intelligence items to consider ending session early
MIN_INTELLIGENCE_FOR_END=2

# ----------------------------------------------------------------------------
# Retry Configuration (Optional)
# ----------------------------------------------------------------------------
# Maximum retries for external API calls
MAX_RETRIES=3

# Initial delay between retries in seconds
RETRY_DELAY_SECONDS=1.0

# ----------------------------------------------------------------------------
# Environment (Optional)
# ----------------------------------------------------------------------------
# Set to 'production' for production mode
ENVIRONMENT=development
